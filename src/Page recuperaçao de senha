    <div class="container">
        <div class="logo">
            <img src="./image/Tolendo.png" alt="Logo Tô Lendo">
            </div>
        <div class="password-reset-box">
            <h1>Redefina sua senha</h1>
            <p>Vamos te ajudar com sua criação de uma nova senha</p>

            <form id="passwordResetForm">
                <div class="input-group">
                    <label for="newPassword">Insira sua nova senha</label>
                    <input type="password" id="newPassword" placeholder="Nova senha" required>
                </div>

                <div class="input-group">
                    <label for="confirmPassword">Confirme sua nova senha</label>
                    <input type="password" id="confirmPassword" placeholder="Nova senha" required>
                </div>

                <button type="submit" class="btn-confirm">Confirmar nova senha</button>
            </form>
        </div>
        <footer>
            
        </footer>
    </div>
    
     <script> document.addEventListener('DOMContentLoaded', () => {
        const passwordResetForm = document.getElementById('passwordResetForm');
        const newPasswordInput = document.getElementById('newPassword');
        const confirmPasswordInput = document.getElementById('confirmPassword');
    
        passwordResetForm.addEventListener('submit', (event) => {
            
            event.preventDefault();
    
            const newPassword = newPasswordInput.value;
            const confirmPassword = confirmPasswordInput.value;
    
            if (newPassword !== confirmPassword) {
                alert('As senhas não coincidem. Por favor, digite senhas iguais.');
                confirmPasswordInput.focus(); 
                return;
            }
    
           
            console.log('Nova senha definida:', newPassword);
            alert('Senha redefinida com sucesso!');
            
        });
    });</script>  

    
